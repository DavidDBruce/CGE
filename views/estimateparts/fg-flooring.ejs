<hr>
<h2>Flooring Materials</h2>
<hr>
<div class="form-group">
  <label for="floorSystemType">Floor System Type</label>
  <div class="funkyradio"  >
    <div class="funkyradio-primary">
      <input type="radio" name="Epoxy" id="Epoxy" <%= (estimate.flooring.floorSystemType =='Epoxy') ? 'checked' : ' ' %> />
      <label for="Epoxy">Epoxy</label>
    </div>
    <div class="funkyradio-success">
      <input type="radio" name="Decorative Epoxy" id="Decorative Epoxy" <%= (estimate.flooring.floorSystemType =='Decorative Epoxy') ? 'checked' : ' ' %> />
      <label for="Decorative Epoxy">Decorative Epoxy</label>
    </div>
    <div class="funkyradio-warning">
      <input type="radio" name="Urethane" id="Urethane" <%= (estimate.flooring.floorSystemType =='Urethane') ? 'checked' : ' ' %> />
      <label for="Urethane">Urethane</label>
    </div>
  </div>
</div>
<div class="form-group">
  <label for="usesUrethane">Uses Urethane?</label>
  <input type="checkbox" class="form-control" id="usesUrethane" name="usesUrethane" <%= estimate.flooring.usesUrethane ? 'checked' : ' ' %> />
</div>
<div class="form-group">
  <label for="urethaneProductSelection">Urethane Product Selection</label>
  <select class="form-control" name="urethaneProductSelection" id="urethaneProductSelection">
    <%  var data = flooringCoatings.query; for( var i=0; i<data.length; i++){ %>
    <option value="<%= data[i]._id %>"<%= (estimate.flooring.urethaneProductSelection == data[i]._id)?'selected':'' %>> <%= data[i].name %> </option>
    <% } %>
</select>
</div>
<div class="form-group">
  <label for="urethaneCoverageSqFt">Urethane Coverage (SqFt)</label>
  <input type="number" class="form-control" id="urethaneCoverageSqFt" name="urethaneCoverageSqFt" value="<%= estimate.flooring.urethaneCoverageSqFt %>" min=0 max=200 >
</div>
<div class="form-group">
  <label for="usesEpoxy">Uses Epoxy?</label>
  <input type="checkbox" class="form-control" id="usesEpoxy" name="usesEpoxy" <%= estimate.flooring.usesEpoxy ? 'checked' : ' ' %> />
</div>
<div class="form-group">
  <label for="epoxyProductSelection">Epoxy Product Selection</label>
  <select class="form-control" name="epoxyProductSelection" id="epoxyProductSelection"  >
    <%  var data = flooringCoatings.query; for( var i=0; i<data.length; i++){ %>
    <option value="<%= data[i]._id %>" <%= (estimate.flooring.epoxyProductSelection == data[i]._id)?'selected':'' %>> <%= data[i].name %> </option>
    <% } %>
</select>
</div>
<div class="form-group">
  <label for="epoxyCoverageSqFt">Epoxy Coverage (SqFt)</label>
  <input type="number" class="form-control" id="epoxyCoverageSqFt" name="epoxyCoverageSqFt" value="<%= estimate.flooring.epoxyCoverageSqFt %>" min=0 max=200 >
</div>