<hr>
<h2>Roofing Materials</h2>
<hr>
<div class="form-group">
  <label for="roofType">Roof Type</label>
  <div class="funkyradio">
    <div class="funkyradio-primary">
      <input type="radio" name="Metal" id="Metal" <%= (estimate.roofing.roofType =='Metal') ? 'checked' : ' ' %> />
      <label for="Metal">Metal</label>
    </div>
    <div class="funkyradio-success">
      <input type="radio" name="Mod Bit" id="Mod Bit" <%= (estimate.roofing.roofType =='Mod Bit') ? 'checked' : ' ' %> />
      <label for="Mod Bit">Mod Bit</label>
    </div>
    <div class="funkyradio-warning">
      <input type="radio" name="Single Ply" id="Single Ply" <%= (estimate.roofing.roofType =='Single Ply') ? 'checked' : ' ' %> />
      <label for="Single Ply">Single Ply</label>
    </div>
  </div>
</div>

<div class="form-group">
  <label for="processType">Process Type</label>
  <div class="funkyradio">
    <div class="funkyradio-primary">
      <input type="radio" name="Roof Coatings" id="Roof Coatings" <%= (estimate.roofing.processType =='Roof Coatings') ? 'checked' : ' ' %> />
      <label for="Roof Coatings">Roof Coatings</label>
    </div>
    <div class="funkyradio-success">
      <input type="radio" name="Polyurethane Foam and Coatings" id="Polyurethane Foam and Coatings" <%= (estimate.roofing.processType =='Polyurethane Foam and Coatings') ? 'checked' : ' ' %> />
      <label for="Polyurethane Foam and Coatings">Polyurethane Foam and Coatings</label>
    </div>
  </div>
</div>

<div class="form-group">
  <label for="coatingType">Coating Type</label>
  <div class="funkyradio">
    <div class="funkyradio-primary">
      <input type="radio" name="Urethane" id="Urethane" <%= (estimate.roofing.coatingType =='Urethane') ? 'checked' : ' ' %> />
      <label for="Urethane">Urethane</label>
    </div>
    <div class="funkyradio-success">
      <input type="radio" name="Silicone" id="Silicone" <%= (estimate.roofing.coatingType =='Silicone') ? 'checked' : ' ' %> />
      <label for="Silicone">Silicone</label>
    </div>
    <div class="funkyradio-warning">
      <input type="radio" name="Acrylic" id="Acrylic" <%= (estimate.roofing.coatingType =='Acrylic') ? 'checked' : ' ' %> />
      <label for="Acrylic">Acrylic</label>
    </div>
  </div>
</div>

<div class="form-group">
  <label for="coatingSelection">Coating Selection</label>
  <select class="form-control" name="coatingSelection">
    <%  var data = roofingCoatings.query; for( var i=0; i<data.length; i++){ %>
      <option value="<%= data[i]._id %>"<%= (estimate.roofing.coatingSelection == data[i]._id)?'selected':'' %>> <%= data[i].name %> </option>
    <% } %>
</select>
</div>
<div class="form-group">
  <label for="coatingCoverageSqFt">Coating Coverage (SqFt)</label>
  <input type="number" class="form-control" id="coatingCoverageSqFt" name="coatingCoverageSqFt" value="<%= estimate.roofing.coatingCoverageSqFt %>" min=0 max=200 >
</div>

<div class="form-group">
  <label for="usesBasecoat">Uses Basecoat?</label>
  <input type="checkbox" class="form-control" id="usesBasecoat" name="usesBasecoat" <%= estimate.roofing.usesBasecoat ? 'checked' : ' ' %> />
</div>
