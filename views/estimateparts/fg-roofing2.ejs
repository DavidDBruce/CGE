<div class="form-group">
  <input type="checkbox" id="usesBasecoat" name="usesBasecoat" <%= estimate.roofing.usesBasecoat ? 'checked' : ' ' %> />
Uses Basecoat?
</div>
<div class="form-group">
  <label for="basecoatSelection">Roofing Basecoat Selection</label>
  <select class="form-control" name="basecoatSelection">
    <%  var data = roofingBasecoats.query; for( var i=0; i<data.length; i++){ %>
      <option value="<%= data[i]._id %>"<%= (estimate.roofing.basecoatSelection == data[i]._id)?'selected':'' %>> <%= data[i].name %> </option>
    <% } %>
</select>
</div>
<div class="form-group">
  <label for="basecoatCoverageSqFt">Basecoat Coverage (SqFt)</label>
  <input type="number" class="form-control" id="basecoatCoverageSqFt" name="basecoatCoverageSqFt" value="<%= estimate.roofing.basecoatCoverageSqFt %>" min=0 max=200 >
</div>
