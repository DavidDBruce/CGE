<h2>Edit masks info</h2>
<div class="content">
	<div>
		<form method="POST" action="/mask/save/<%= mask._id %>">

			<div class="form-group" id=frm>
				<label for="_id">ID</label>
				<input type="number" class="form-control" id="_id" name="_id" value="<%= mask._id %>" required disabled>
			</div>

			<div class="form-group">
				<label for="_type">_type</label>
				<input type="string" class="form-control" id="_type" name="_type" value="<%= _type %>" required min="mask._type">
			</div>

			<div class="form-group">
				<label for="name">name</label>
				<input type="string" class="form-control" id="name" name="name" value="<%= mask.name %>"
					required>
			</div>
            <div class="form-group">
				<label for="price">price</label>
				<input type="number" step = "any" class="form-control" id="price" name="price" value="<%= mask.price %>"
					required>
			</div>

			<input type="submit" value="Save" class="btn btn-primary" />
		</form>
		<br/>
		<form method="get" action="/mask">
			<input type="submit" value="Return to list" class="btn btn-caution" />
		</form>
	</div>
</div>