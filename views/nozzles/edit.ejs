<h2>Edit roofing basecoat</h2>
<div class="content">
	<div>
		<form method="POST" action="/nozzle/save/<%= nozzle._id %>">

			<div class="form-group" id=frm>
				<label for="_id">ID</label>
				<input type="number" class="form-control" id="_id" name="_id" value="<%= nozzle._id %>" required disabled>
			</div>

			<div class="form-group">
				<label for="name">Name</label>
				<input type="text" class="form-control" id="name" name="name" value="<%= nozzle.name %>" required>
			</div>

			<div class="form-group">
				<label for="unit">Unit</label>
				<input type="text" class="form-control" id="unit" name="unit" value="<%= nozzle.unit %>" required>
			</div>

			<div class="form-group">
				<label for="price">Price</label>
				<input type="number" class="form-control" id="price" name="price" value="<%= nozzle.price %>" required>
			</div>

			

			<div class="form-group">
				<label for="displayorder">Display Order</label>
				<input type="number" class="form-control" id="displayorder" name="displayorder" value="<%= nozzle.displayorder %>"
					required>
			</div>

			<div class="form-group">
				<label for="displayorder">Status</label>
				<input type="text" class="form-control" id="status" name="status" value="<%= nozzle.isactive %>"
					required>
			</div>

			<input type="submit" value="Save" class="btn btn-primary" />
		</form>
		<br/>
		<form method="get" action="/nozzle">
			<input type="submit" value="Return to list" class="btn btn-caution" />
		</form>
	</div>
</div>
