<h2>Edit tapes </h2>
<div class="content">
	<div>
		<form method="POST" action="/tapes/save/<%= tapes._id %>">
			<div class="form-group" id=frm>
				<label for="_id">ID</label>
				<input type="number" class="form-control" id="_id" name="_id" value="<%= tapes._id %>" required disabled>
			</div>
			<div class="form-group">
				<label for="name">Name</label>
				<input type="text" class="form-control" id="name" name="name" value="<%= tapes.name %>" maxlength="50" required>
			</div>
			<div class="form-group">
				<label for="unit">Unit</label>
				<input type="text" class="form-control" id="unit" name="unit" value="<%= tapes.unit %>" maxlength="3" required>
			</div>
			<div class="form-group">
				<label for="price">Price</label>
				<input type="number" class="form-control" id="price" name="price" value="<%= tapes.price %> min="0" max="100"" required>
			</div>
			<div class="form-group">
				<label for="displayorder">Display Order</label>
				<input type="number" class="form-control" id="displayorder" name="displayorder" value="<%= roller.displayorder %>" min="0" max="200" required>
			</div>
			<input type="submit" value="Save" class="btn btn-primary" />
		</form>
		<br/>
		<form method="get" action="/tapes">
			<input type="submit" value="Return to list" class="btn btn-caution" />
		</form>
	</div>
</div>
